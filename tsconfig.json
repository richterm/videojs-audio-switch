    "compilerOptions": {
        "module": "ESNext",
        "target": "es2020",
        "jsx": "preserve",
        "strictFunctionTypes": true,
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "lib": ["dom", "es6"]
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}
